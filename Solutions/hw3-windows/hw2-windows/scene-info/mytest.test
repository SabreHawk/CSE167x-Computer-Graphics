#Cornell Box
size 640 480
camera 0 0 1 0 0 -1 0 1 0 45
output scene6.png

maxdepth 5



maxverts 12
#planar face
vertex -1 +1 0
vertex -1 -1 0
vertex +1 -1 0
vertex +1 +1 0

#cube
vertex -1 +1 +1
vertex +1 +1 +1
vertex -1 -1 +1
vertex +1 -1 +1

vertex -1 +1 -1
vertex +1 +1 -1
vertex -1 -1 -1
vertex +1 -1 -1


ambient 0 0 0
specular 0 0 0
shininess 1
emission 0 0 0
diffuse 0 0 0

attenuation 1 0.1 0.05

point 0 0.44 -1.5 0.8 0.8 0.8
directional 0 1 -1 0.2 0.2 0.2

diffuse 0 0 1
#sphere 0 0.8 -1.5 0.1


pushTransform
#cube2
diffuse 0.2 0.5 0.7
specular 0.2 0.2 0.2
pushTransform
translate 0.4 -0.7 -1.5
rotate 0 1 0 -15
scale 0.2 0.2 0.2
diffuse 1 1 1

tri 4 6 5
tri 6 7 5

#trinormal 0 2 1
#trinormal 2 3 1
#trinormal 0 1 4
#trinormal 1 5 4
#trinormal 3 5 1
#trinormal 3 7 5
#trinormal 0 4 6
#trinormal 0 6 2
#trinormal 2 6 7
#trinormal 2 7 3
#trinormal 6 4 5
#trinormal 6 5 7
popTransform

popTransform
